{% extends "layouts/main.twig" %}

{% block header %}{{ parent() }}{% endblock %}

{% block main %}
<section class="w-11/12 2xl:w-1/2 m-auto">
    {% if error_message %}
    <div class="alert alert-danger">{{ error_message }}</div>
    {% endif %}

    <form action="/register" method="POST" enctype="multipart/form-data" class="space-y-4 bg-white rounded-lg p-8 mt-4 m-auto">
        <h2 class="text-2xl font-semibold text-center mb-6">Registreren</h2>
        <label for="username" class="block text-lg font-medium text-gray-700">Gebruikersnaam of e-mail</label>
        <input type="text" id="username" name="username" placeholder="Voer je gebruikersnaam of e-mail in"
            class="mt-1 block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
            required>
        <label for="password" class="block text-lg font-medium text-gray-700">Wachtwoord</label>
        <input type="password" id="password" name="password" placeholder="Voer je wachtwoord in"
            class="mt-1 block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
            required>
        <input type="password" name="password_confirm" placeholder="Bevestig Wachtwoord"
            class="mt-1 block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
            required>

            <label for="profile_picture" class="block text-lg font-medium text-gray-700">Profielfoto (max 1MB)</label>
            <input type="file" id="profile_picture" name="profile_picture" accept="image/*" class="mt-1 block w-full px-4 py-3 border border-gray-300 rounded-lg">
        <button type="submit"
            class="w-full py-3 px-4  mt-5 bg-blue-600 text-white font-semibold rounded-lg shadow-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 transition duration-200">Registreren</button>
    </form>
</section>
{% endblock %}